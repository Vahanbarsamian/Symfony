{% extends 'base.html.twig' %}

{% block title %} / {{ titre }}{% endblock %}

{% block titre %}{{ titre }}{% endblock %}
{% block body %}
<div class="container-fluid">
    
        <div class="row align-items-center m-2 p-2">
            <div class="col-2 text-center">
                <img src="{{ asset('img/animaux/' ~ animal.name|lower ~'.png')}}" alt="{{ animal.name }}">
            </div>
            <div class="col-3 text-center">
                <h1><a href="{{path('get_animal',{'id':animal.id})}}"></a>{{animal.name}}</h1>
                <p class="text-left">Description : {{animal.description}}</p>
                <p class="text-left">Poids : {{animal.poids}} kg</p>
                <p class="text-left">Dangereux : 
                    {% if animal.dangerous %}
                        <span class="badge badge-danger rounded">oui</span>
                    {% else %} 
                        <span class="badge badge-success rounded">
                    non </span>
                    {% endif %}
                 </p>
                <p class="text-left"><a href="{{path('get_famille',{'id':animal.famille.id})}}"  class="btn btn-primary rounded">{{animal.famille.libelle}}</a></p>
                <div class="text-left mb-3">pr√©sent en :
                    <p>
                        {% for continent in animal.continents %}
                            <a href="{{path('get_continent',{'id':continent.id})}}" class="badge badge-warning rounded p-2">{{ continent.libelle }}</a>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
</div>
{% endblock %}
