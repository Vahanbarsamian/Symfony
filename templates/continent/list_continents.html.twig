{% extends 'base.html.twig' %}

{% block title %} / Liste des continents {% endblock %}

{% block titre %} {{titre}} {% endblock %}
{% block body %}
    {% for continent in continents %} 
    <div class="col-2 text-center mb-5">
        <h2><a href="{{path('get_continent',{'id':continent.id})}}" class="badge badge-primary rounded px-3 py-2">{{continent.libelle}}</a></h2>
    </div>
        <div class="row align-items-center">
            <div class="col-2"></div>
                <div class="col-6 text-center">
                    <div class="row align-items-bottom">
                        {% for animal in continent.animaux %}
                            <div class="col flex-grow-0">
                                <a href="{{path('get_animal',{'id':animal.id})}}"  class="btn btn-warning rounded px-3 py-2">{{animal.name}}</a>
                                    <p><img src="{{asset('img/animaux/'~ animal.name ~ '.png')}}" alt="{{animal.name}}"class="mt-3"></p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
        </div>
    <hr class="mt-5 mb-5 w-75">
    {% endfor %}
{% endblock %}
